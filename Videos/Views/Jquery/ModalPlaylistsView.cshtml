@model Videos.Models.ViewModel.PlaylistsView
@for (int i = 0; i < Model.ListaPlaylists.Count; i++) {
    <div class="linha_modal_playlist">
        <input type="hidden" class="id_modal_video" value="@Model.id_video" />
        <input type="hidden" class="id_modal_playlist" value="@Model.ListaPlaylists[i].id" />
        <label>@Model.ListaPlaylists[i].nome @Model.PlaylistHasVideo(Model.ListaPlaylists[i].id, Model.id_video)</label>
    </div>
}