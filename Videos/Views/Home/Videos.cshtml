@model Videos.Models.ViewModel.VideosView
<script>
    $(function() {
        $("#tabela_videos").on("click", ".coluna_titulo", function() {
            var id = $(this).find(".id").val();
            $.post('@Url.Action("ExibirFormVideo", "Jquery")', { id: id },
            function(resposta) {
                $("#modal_form_video .modal-body").html(resposta);
                $("#modal_form_video").modal('show');
            });
        });
        $("#tabela_videos").on("click", ".play", function() {
            var id = $(this).closest('td').find('.id_play').val();
            $.post('@Url.Action("PlayVideo", "Jquery")', { id: id });
        });
        $("#div_filtros").on("click", ".add_artista", function() {
            $.post('@Url.Action("AdicionarArtistaJquery", "Jquery")', {id: $("#select_artistas").val(),
                nome_artista: $("#select_artistas option:selected").text()
            },
            function(resposta) {
                $("#div_filtros #lista_artistas").html(resposta);
            });
        });
        $("#div_filtros").on("click", ".add_musica", function() {
            $.post('@Url.Action("AdicionarMusicaJquery", "Jquery")', { titulo_musica: $(this).closest('div').find("input[name=musica]").val() },
            function(resposta) {
                $("#div_filtros #lista_musicas").html(resposta);
            });
        });
        $("#div_filtros").on("click", ".add_tag", function() {
            $.post('@Url.Action("AdicionarTagJquery", "Jquery")', { nome_tag: $(this).closest('div').find("input[name=tag]").val() },
            function(resposta) {
                $("#div_filtros #lista_tags").html(resposta);
            });
        });
        $("#div_filtros").on("click", ".add_tipo", function() {
            $.post('@Url.Action("AdicionarTipoJquery", "Jquery")', {
                id: $("#select_tipos").val(),
                descricao: $("#select_tipos option:selected").text()
            },
            function(resposta) {
                $("#div_filtros #lista_tipos").html(resposta);
            });
        });
        $("#div_filtros").on("click", ".filtrar", function() {
            var array = $("#filtro").serializeArray();
            var json = {};

            jQuery.each(array, function() {
                json[this.name] = this.value || '';
            });
            
            $.ajax({
                url: '@Url.Action("FiltrarVideosJquery", "Jquery")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(json),
                success: function(resposta) {
                    $("#tabela_videos").html(resposta);
                }
            });
        });
        $("#div_filtros").on("click", ".playlist", function() {
            var array = $("#filtro").serializeArray();
            var json = {};

            jQuery.each(array, function() {
                json[this.name] = this.value || '';
            });
            
            $.ajax({
                url: '@Url.Action("GerarPlaylistJquery", "Jquery")',
                type: 'POST',
                contentType: 'application/json',
                data: JSON.stringify(json),
                success: function(resposta) {
                    alert('foi');
                }
            });
        });
        $("#tabela_videos").on("click", ".atualizar_videos", function() {
            $.ajax({
                url: '@Url.Action("AtualizarVideosJquery", "Jquery")',
                type: 'POST',
                contentType: 'application/json',
                success: function(resposta) {
                    alert('foi');
                }
            });
        });
        $('#select_artistas').tokenize2({
            // specify if Tokenize2 will search from the begining of a string
            searchFromStart: false,
            // custom delimiter
            delimiter: ';', //,
            // custom placeholder text
            placeholder: 'Artista', //false
        });
        $('#select_musicas').tokenize2({
            // allow you to create custom tokens
            tokensAllowCustom: true,
            // specify if Tokenize2 will search from the begining of a string
            searchFromStart: false,
            // custom delimiter
            delimiter: ';', //,
            // custom placeholder text
            placeholder: 'Música', //false
        });
        $('#select_tags').tokenize2({
            // allow you to create custom tokens
            tokensAllowCustom: true,
            // specify if Tokenize2 will search from the begining of a string
            searchFromStart: false,
            // custom delimiter
            delimiter: ';', //,
            // custom placeholder text
            placeholder: 'Tag', //false
        });
        $('#select_tipos').tokenize2({
            // allow you to create custom tokens
            tokensAllowCustom: true,
            // specify if Tokenize2 will search from the begining of a string
            searchFromStart: false,
            // custom delimiter
            delimiter: ';', //,
            // custom placeholder text
            placeholder: 'Tipos', //false
        });
    });
</script>
<div class="modal fade" id="modal_form_video" role="dialog" tabindex="-1">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Vídeo</h4>
            </div>
            <div class="modal-body row"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary salvar">Salvar</button>
                <button type="button" class="btn btn-primary cancelar" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12" id="div_filtros">
    <div class="panel panel-default">
        <div class="panel-heading">Filtros</div>
        <div class="panel-body">
            <form id="filtro">
                <div class="col-md-2">
                    <label style="display:block">Artista principal</label>
                    @Html.DropDownListFor(model => Model.ArtistaPrincipal,
                    new SelectList(Model.ListaArtistas, "id", "nome", Model.ListaArtistas), "Artista", new { @class = "form-control" })
                </div>
                <div class="col-md-2">
                    <label style="display:block">Artistas</label>
                    @Html.DropDownListFor(model => Model.ListaArtistas,
                    new SelectList(Model.ListaArtistas, "nome", "nome", Model.ListaArtistas), "Artista", new { @id = "select_artistas",
                    @class = "form-control campo_filtro", @multiple = true })
                </div>
                <div class="col-md-2">
                    <label style="display:block">Músicas</label>
                    @Html.DropDownListFor(model => Model.ListaMusicas,
                    new SelectList(Model.ListaMusicas, "titulo", "titulo", Model.ListaMusicas), "Música", new { @id = "select_musicas",
                    @class = "form-control campo_filtro", @multiple = true })
                </div>
                <div class="col-md-2">
                    <label style="display:block">Tags</label>
                    @Html.DropDownListFor(model => Model.ListaTags,
                    new SelectList(Model.ListaTags, "nome", "nome", Model.ListaTags), "Tag", new { @id = "select_tags",
                    @class = "form-control campo_filtro", @multiple = true })
                </div>
                <div class="col-md-2">
                    <label style="display:block">Tipos</label>
                    @Html.DropDownListFor(model => Model.ListaTipos,
                    new SelectList(Model.ListaTipos, "descricao", "descricao", Model.ListaTipos), "Tipo", new { @id = "select_tipos",
                    @class = "form-control campo_filtro", @multiple = true })
                </div>
                <div class="col-md-2" style="margin-top: 25px">
                    <button type="button" class="btn btn-default filtrar" aria-label="Filtrar">
                        <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                    </button>
                    <button type="button" class="btn btn-default playlist" aria-label="Gerar playlist">
                        <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<br />
<div id="tabela_videos">
    @{Html.RenderPartial("/Views/Jquery/VideoListView.cshtml",Model);}
</div>